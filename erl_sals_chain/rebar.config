{erl_opts, [debug_info]}.
{deps, [
  cowboy,
  jiffy,
  {uuid, {pkg, uuid_erl}}
]}.

{plugins, [rebar3_run]}.

{relx, [{release, { erl_sals_chain, "0.1.0" },
         [erl_sals_chain,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
